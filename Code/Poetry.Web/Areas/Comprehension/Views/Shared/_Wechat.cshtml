@using Sail.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>抗洪抢险微感悟 千兆流量等你拿</title>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    @Styles.Render("~/Content/css/raftingwecss")
    @Scripts.Render("~/bundles/wejs")
    <link href="~/Content/fonts/rafting.css" rel="stylesheet" />

    <title>@ComprehensionParam.Default.SiteName</title>
    <script>
        var root = '@WebHelper.GetRootUrl()';
        $.setSailConfig({ Root: root, ApiRoot: root + "Api/" });
    </script>

    @RenderSection("head", false)
</head>
<body class="body">
    <div id="shareImage" style="display:none;">
        <img src="~/content/images/feeling.png" />
    </div>
    <header class="zqui-bar zqui-bar-nav bannersub"></header>
    <nav class="zqui-bar zqui-bar-tab">
        <a class="zqui-tab-item " href="~/Comprehension/Wechat/index">
            <i class="icon icon-shouye-o">
            </i>
            <span class="zqui-tab-label">首页</span>
        </a>
        <a href="~/Comprehension/Wechat/raftinglist" class="zqui-tab-item">
            <i class="icon icon-liebiao-o">
            </i>
            <span class="zqui-tab-label">直播</span>
        </a>
        <a href="~/Comprehension/Wechat/recommendTips" class="zqui-tab-item">
            <i class="icon icon-elitepost">
            </i>
            <span class="zqui-tab-label">精华</span>
        </a>
        <a href="~/Comprehension/Wechat/rankinglist" class="zqui-tab-item">
            <i class="icon icon-paihangingbang-o">
            </i>
            <span class="zqui-tab-label">点赞</span>
        </a>
        <a href="~/Comprehension/Wechat/center" class="zqui-tab-item">
            <i class="icon icon-geren-o"></i>
            <span class="zqui-tab-label">我的</span>
        </a>
    </nav>
    <div class="zqui-content">
        @RenderBody()
    </div>
</body>
</html>
